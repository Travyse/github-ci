Bootstrap: docker
From: ubuntu:18.04


%labels
maintainer="Wenhao Gou<wg2364@cumc.columbia.edu>"
%post
useradd docker
mkdir /home/docker
chown docker:docker /home/docker
addgroup docker staff
echo 'deb http://mirror.math.princeton.edu/pub/ubuntu/ bionic main' >> /etc/apt/sources.list
apt-get update && \
DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
default-jdk \
cpp \
python3-dev \
python3-venv \
python3-wheel \
python3-pip \
python3-setuptools \
libpq-dev \
libpng-dev \
libpcre2-dev \
libgirepository-1.0-1 \
libglib2.0-0 \
libelf1 \
libssl-dev \
libcurl4-openssl-dev \
libxml2-dev \
libmpx0 \
curl \
perl-base \
gpg-agent \
libxrender1 \
yum \
dirmngr \
software-properties-common \
lsb-release \
ed \
less \
locales \
wget \
ca-certificates \
libopenblas-base \
libgcc-6-dev \
libstdc++-6-dev \
gcc-5 \
g++-5 \
cmake \
swig \
gfortran \
libbz2-dev \
xfonts-base \
libxrender1 \
libx11-dev \
libx11-6 \
libxt-dev && rm -rf /var/lib/apt/lists/*
update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-5 50 --slave /usr/bin/g++ g++ /usr/bin/g++-5
cd /tmp && wget https://cran.r-project.org/src/base/R-4/R-4.2.0.tar.gz && wget http://tukaani.org/xz/xz-5.2.2.tar.gz
tar xzvf xz-5.2.2.tar.gz && cd xz-5.2.2 && ./configure && make && make install && cd .. && rm -rf xz-5.2.2*
tar -xzf R-4.2.0.tar.gz && cd R-4.2.0 && ./configure --prefix=/usr/lib/R/ --with-blas --with-readline=no && \
make && make install && ln -s /usr/lib/R/bin/R /bin/R && ln -s /usr/lib/R/bin/Rscript /bin/Rscript && \
cd .. && rm -rf R-4.2.0*
pip3 install wheel
pip3 install mofapy2
wget https://github.com/downloads/PMBio/peer/R_peer_source_1.3.tgz && R CMD INSTALL R_peer_source_1.3.tgz && rm -f R_peer_source_1.3.tgz
R --slave -e 'install.packages(c("dplyr", "tibble", "readr", "modelr", "purrr", "devtools"), repos="http://cran.rstudio.com/")'
R --slave -e 'devtools::install_github("bioFAM/MOFA2", build_opts = c("--no-resave-data --no-build-vignettes"))'
echo "exec /bin/bash "$@"" >> /entrypoint.sh
chmod u+x /entrypoint.sh
%runscript
exec /bin/bash /bin/bash /entrypoint.sh "$@"
%startscript
exec /bin/bash /bin/bash /entrypoint.sh "$@"
